{% extends 'base.html.twig' %}

{% block body %}
<div class="masthead">
    <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center ">
        <div class="d-flex justify-content-center">
            <div class="text-center">
                <h1 class="mx-auto my-0 text-uppercase">Snowboarding is the way to be</h1>
                <h2 class="text-white-50 mx-auto mt-2 mb-5">Snowboarders Community </h2>                        
            </div>            
        </div>       
    </div>
    <div class="d-flex align-items-end flex-column">
        <a id="more_content" href="#cards-tricks"><i class="bi bi-arrow-down-square-fill mx-3" style='font-size:48px;color:white'></i></a>
    </div>    
</div>  
<section id="cards-tricks" class="d-flex mt-5">
    <div class="container ">        
        <div class="row justify-content-around  gx-0">
            {% for i in 0..16%}
                    <div class="card card-homepage my-4 mx-4">
                        <a class="text-decoration-none text-dark" href="{{ path('trickpagedetail')}} ">
                            <img src="{{asset('images/trick.png')}}" class="card-img-top" alt="Snowboard trick"/>
                            <div class="card-title pt-2"><h4 class="text-center">Trick Name</h4></div>
                        </a>
                        {% if not app.user %}
                            <div class="modification text-center mb-2">
                                <a href="#" class="btn btn-danger btn-sm mx-2"><i class="bi bi-trash3-fill"></i></a>
                                <a href="#" class="btn btn-info btn-sm mx-2"><i class="bi bi-pencil-fill"></i></a>                            
                            </div>
                        {% else %}

                        {% endif %}
                    </div>
            {% endfor %}
        </div>    
        <div class="button-load-more text-center mb-5">
            <a href="" class="btn btn-sm rounded text-light bg-dark px-5 py-3" >Load More</a>
        </div>            
    </div>
</section>
{% set nbTrick = 17 %} {# variable de test Ã  remplacer par le tableau des tricks #}
{% if nbTrick > 15 %}
    <div class="d-flex justify-content-end">
        <a  href="#cards-tricks" class="px-5 py-3" ><i class="bi bi-file-arrow-up-fill" style='font-size:48px;color:black;'></i></a>
    </div>           
{% endif %}
  

{% endblock %}
