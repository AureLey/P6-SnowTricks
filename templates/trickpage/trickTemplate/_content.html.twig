{% if edit %}
	{# --------------------------------------NEW Trick------------------------------------------------------------- #}
	<div class="form-floating my-4">
		{{form_row(trickform.content, {'label' : false,'attr':{'class' :  'form-control' }})}}
	</div>
	<div class="trick-group">
		<div class="form-floating col-6 my-3">
			{{ form_row(trickform.groupTrick,{'label' : false,'attr':{'class' :  'form-select'} })}}
		</div>
		<div class="my-3">
			<button type="submit" class="btn btn-success btn-sm mx-2">Save</button>
			{# In Update modification add Delete Button #}
			{% if update %}
				<a href="{{path('delete_trick',{'id' : trick.id })}}" class="btn btn-danger btn-sm mx-2" onclick="return window.confirm('Do you want to delete this trick permanently?')">
					Delete
				</a>
			{% endif %}
		</div>
	</div>
{% else %}
	{# --------------------------------------SHOW Trick------------------------------------------------------------- #}
	{# Field Content #}
	<div class="content my-4"> 
		<p class="fw-bold"><h3>Trick description :</h3></p>
		<p>{{trick.content}}</p>
	</div>
	{# Field Group && Date #}
	<div class="trick-content mb-4">
		<h2>
			<span class="badge bg-secondary ">{{trick.groupTrick}}</span>
		</h2>
		<div class="badge text-bg-dark">
			<h3>Cr√©ation le :
				{{trick.createdAt|date('d/m/Y')}}</h3>
		</div>
	</div>

{% endif %}
