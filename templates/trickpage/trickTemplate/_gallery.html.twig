{% for video in trick.videos %}
<div class="col-lg-3"> 
	<div class="card my-4 mx-3">
		<iframe class="w-100 rounded video ratio ratio-16x9" src="{{video.name}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		{% if update %}
			<div class="card-title pt-2 mx-3">
				<a href="#" class="btn btn-outline-danger btn-sm mx-2">
					<i class="bi bi-trash3-fill"></i>
				</a>
				<a href="{{ path('update_trick',{'slug' : trick.slug })}}" class="btn btn-outline-info btn-sm mx-2">
					<i class="bi bi-pencil-fill"></i>
				</a>
			</div>
		{% endif %}	
	</div>
</div>
{% endfor %}
