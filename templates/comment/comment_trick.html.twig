{% block comment %}
	<div class="card bg-light">
		<div
			class="card-body">
			<!-- Comment form-->
			{% if app.user %}
				{{form_start(commentForm)}}
					{{form_row(commentForm.content, 
						{'label' : 'Comment',
						 			'attr':{'class' :  'form-control',
											'rows'  : '3',
						}})}}
					<button class="btn btn-success mt-3" type="submit">Envoyez</button>
				{{form_end(commentForm)}}
			{% else %}
				<div class="btn-comment trick-comment border-bottom pb-3">
					<a href="{{path('app_login')}}" class="btn btn-success btn-sm">
						<h3>Login</h3>
					</a>
					<a href="{{path('app_signup')}}" class="btn btn-success btn-sm">
						<h3>Sign-up</h3>
					</a>
				</div>
			{% endif %}
			<!-- Comment with nested comments-->			
			{% for comment in trick.comments %}
				<!-- Single comment-->
				<div class="d-flex my-3">
					<div class="flex-shrink-0"><img class="rounded-circle" src="https://dummyimage.com/50x50/ced4da/6c757d.jpg" alt="..."></div>
					<div class="ms-3">
						<div class="fw-bold">{{comment.commentUser.username}}</div>
						{{comment.content}}
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="footer-comment d-flex justify-content-center my-3">
			<a href="#" class="btn btn-dark btn-sm mx-5">Load More</a>
		</div>
	</div>
{% endblock %}
