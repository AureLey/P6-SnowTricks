{% extends 'base.html.twig' %}

{% block body %}
		<div class="container form-container">
			<div class="row my-5">				
                <div class="card cascading-right col-6 mx-auto text-center border">						
                    <!--Gestion des erreurs -->							
                    {# {% if error != empty %}<div class="alert alert-danger">{{ error }}</div>{% endif %} #}
                    <!--END Gestion des erreurs -->
                    <h2 class="fw-bold my-5">Login</h2>
                    <form action="" method="post">								
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="email-signup" name="email" class="form-control" required/>
                            <label class="form-label" for="Email">Email</label>
                        </div>
                        
                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="password-signup" name="password" class="form-control" required/>
                            <label class="form-label" for="password-signup">Mot de passe</label>
                        </div>							

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">
                            Se connecter
                        </button>							
                    </form>						
                </div>			
			</div>
		</div>

{% endblock %}
