{% extends 'base.html.twig' %}

{% block body %}
	<div class="container form-container">
		{% for message in app.flashes('error') %}
            <div class="alert alert-danger my-3">
                {{ message }}
            </div>
        {% endfor %}
		<div class="row my-5">
			<div class="card cascading-right col-6 mx-auto text-center border">
				<!--Gestion des erreurs -->
				{# {% if error != empty %}<div class="alert alert-danger">{{ error }}</div>{% endif %} #}
				<!--END Gestion des erreurs --><h2 class="fw-bold my-5"> Forgot Password</h2>
				{{form_start(formForgot)}}
					<!-- Username input -->
					<div class="form-outline mb-4">
						{{form_row(formForgot.username, 
						{'label' : 'Username',
						  'attr':{'class' :  'form-control'}})}}
					</div>
					<!-- Submit button -->
					<button type="submit" class="btn btn-primary btn-block mb-2">
						Ask for Reset
					</button>
				{{form_end(formForgot)}}
			</div>
		</div>
	</div>

{% endblock %}
