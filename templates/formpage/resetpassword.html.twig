{% extends 'base.html.twig' %}

{% block body %}
	<div class="container form-container">
		<div class="row my-5">
			<div class="card cascading-right col-6 mx-auto text-center border">
				<!--Gestion des erreurs -->
				{# {% if error != empty %}<div class="alert alert-danger">{{ error }}</div>{% endif %} #}
				<!--END Gestion des erreurs --><h2 class="fw-bold my-5"> Reset Password</h2>
				<form
